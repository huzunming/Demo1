<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 搜索栏 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wallet_nfc_goback_btn_selected"
        android:gravity="center"
        android:orientation="horizontal" >

        <!-- 定位 -->

        <LinearLayout
            android:id="@+id/search_topbar_location_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:src="@drawable/search_location" />

            <TextView
                android:id="@+id/search_topbar_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="北京" />
        </LinearLayout>
        <!-- 定位 -->


        <!-- 输入框 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/search_topbar_edittext"
                android:layout_width="214dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!-- 输入框 -->

        <LinearLayout
            android:id="@+id/search_topbar_back_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dip"
                android:text="返回" />
        </LinearLayout>
    </LinearLayout>
    <!-- 搜索栏 -->


    <!-- 条目列表 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

       
            <ListView
                android:id="@+id/search_listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:dividerHeight="1dp" >
            </ListView>
    </LinearLayout>
    <!-- 条目列表 -->

</LinearLayout>